<h3>All Players</h3>

<% @players.order(:name).each do |player| %>
  <% if player.present? %>
    <div class="container">
      <div class="row align-items-start">
        <div class="col">
          <a href='/player/<%= player.id %>'>
            <div class="d-grid gap-2">
              <button class='btn btn-success btn-block rounded-0 my-1' type='button'><%= player.name %></button>
            </div>
          </a>
        </div>
      </div>
    </div>
  <% else %>
    <p>No players yet.</p>
    <a href='/new-player'>
      <button class='btn btn-danger rounded-0 mx-3' type='button'>New player</button>
    </a>
  <% end %>
<% end %>
